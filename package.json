{
  "name": "astro-basics-website",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Astro-based website demonstrating components and utilities",
  "author": "Shawn Sandy",
  "license": "MIT",
  "keywords": [
    "astro",
    "website",
    "content",
    "blog"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shawn-sandy/astro-basics"
  },
  "exports": {
    ".": "./src/components/index.ts",
    "./astro": "./src/components/astro"
  },
  "files": [
    "src/components/index.ts",
    "src/components/astro/*.astro"
  ],
  "scripts": {
    "dev": "astro dev --open",
    "start": "run-p dev sass",
    "build": "astro build",
    "preview": "astro preview",
    "sass": "sass --watch src/styles/index.scss:src/styles/index.css --style=compressed",
    "astro": "astro",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:styles": "stylelint 'src/**/*.{css,scss}'",
    "lint:styles:fix": "stylelint 'src/**/*.{css,scss}' --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --fix",
    "lint:all": "npm run lint:check && npm run lint:styles && npm run format:check && npm run type-check && npm run lint:md",
    "fix:all": "npm run lint && npm run lint:styles:fix && npm run format && npm run lint:md:fix",
    "npm-update": "npx npm-check-updates -u",
    "npm-update-i": "npx npm-check-updates -i",
    "ticket:validate": "gh auth status && gh repo view && echo 'âœ… GitHub CLI ready for ticket creation'",
    "ticket:create": "gh issue create --web",
    "ticket:list": "gh issue list --state open",
    "ticket:labels": "gh label list",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "imports": {
    "#*": "./src/*"
  },
  "dependencies": {
    "@astro-community/astro-embed-youtube": "^0.5.6",
    "@astrojs/mdx": "^4.3.1",
    "@astrojs/netlify": "^6.5.3",
    "@astrojs/node": "^9.3.0",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@astrojs/vercel": "^8.2.3",
    "@clerk/astro": "^2.10.8",
    "@fpkit/acss": "^0.5.9",
    "@fpkit/react": "^0.4.3",
    "@sentry/astro": "^7.108.0",
    "@spotlightjs/astro": "^2.2.2",
    "@supabase/supabase-js": "^2.53.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "@vite-pwa/astro": "^1.1.0",
    "astro": "^5.12.3",
    "astro-embed": "^0.9.0",
    "astro-imagetools": "^0.9.0",
    "astro-lighthouse": "^0.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-accessible-emojis": "^0.3.2",
    "remark-toc": "^9.0.0",
    "sharp": "^0.34.3",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@playwright/test": "^1.54.1",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "markdownlint-cli": "^0.45.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.1",
    "sass": "^1.87.0",
    "stylelint": "^16.22.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "vitest": "^1.4.0"
  }
}
