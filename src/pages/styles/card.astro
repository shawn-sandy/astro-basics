      </p>
      <!-- <div>
          <p><a href="/about">About</a></p>
      </div> -->
    </div>
    <div>
      <button>Click me</button>
      <p><a href="/about">About</a></p>
    </div>
  </section>
</Layout>

<style>
  :root {
    --card-p: 1.5rem;
  }
  section {
    position: relative;
    display: grid;
    grid-template-rows: "pile";
    height: fit-content;
    padding: var(--card-p);
    border: lightgray solid thin;
  }

  section > * {
    grid-area: pile;
  }

  section > a:empty {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    z-index: 99;
    /* padding: var(--card-p); */
    background-color: transparent;
  }

  section:has(a:empty:hover) {
    /* cursor: pointer; */
    border: blue solid thin;
  }

  section div:has(a:not(empty), button:not(empty)) {
    border: none;
    z-index: 999;
    height: min-content;
    width: min-content;
  }

  section > div:first-of-type {
    z-index: 1;
    background: transparent;
    width: auto;
  }
</style>

