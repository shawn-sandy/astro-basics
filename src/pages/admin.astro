---
import Auth from "#layouts/Auth.astro";
import { SignedIn, SignedOut, UserButton } from "@clerk/astro/components";
---

<Auth pageTitle="Admin - Astro Kit">
  <SignedIn isStatic={true}>
    <div class="admin-container">
      <h1>Admin Dashboard</h1>
      <div class="admin-actions">
        <button class="action-button">Manage Users</button>
        <button class="action-button">View Reports</button>
        <button class="action-button">Settings</button>
      </div>
    </div>
  </SignedIn>
  <SignedOut isStatic={true}>
    <p>Please sign in to access the admin dashboard.</p>
  </SignedOut>
</Auth>
