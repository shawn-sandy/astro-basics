  }

  .sign-in-btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #3182ce;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    transition: background 0.2s;
  }

  .sign-in-btn:hover {
    background: #2c5aa0;
  }

  @media (max-width: 768px) {
    .dashboard-container {
      padding: 1rem;
    }
  }
</style>
