---
export type Props = {
  readonly posts: readonly {
    readonly title: string
    readonly excerpt: string
    readonly status: 'Published' | 'Draft'
    readonly date: string
  }[]
}

const { posts } = Astro.props
---

<div class="post-list">
  {
    posts.map(post => (
      <div class="post-item">
        <h4>{post.title}</h4>
        <p>{post.excerpt}</p>
        <div class="post-meta">
          <span class={`status ${post.status.toLowerCase()}`}>{post.status}</span>
          <small>{post.date}</small>
        </div>
      </div>
    ))
  }
</div>

<style>
  .post-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-item {
    padding: 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 6px;
  }

  .post-item h4 {
    margin: 0 0 0.5rem 0;
    color: #1a202c;
  }

  .post-item p {
    margin: 0 0 0.5rem 0;
    color: #64748b;
    font-size: 0.875rem;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .post-meta span {
    padding: 0.25rem 0.5rem;
    background: #e2e8f0;
    border-radius: 4px;
    font-size: 0.75rem;
    color: #4a5568;
  }

  .post-meta small {
    color: #64748b;
  }

  .status.published {
    background: #c6f6d5;
    color: #276749;
  }

  .status.draft {
    background: #fed7d7;
    color: #9b2c2c;
  }
</style>
