---
export type Props = {
  headerTitle?: string;
  headerDescription?: string;
  headerImageUrl?: string;
  headerImageAlt?: string;
};
const { headerTitle, headerDescription, headerImageUrl, headerImageAlt } =
  Astro.props;
---

<header>
  <section id="header">
    {
      headerImageUrl && (
        <div>
          <img src={headerImageUrl} alt={headerImageAlt} />
        </div>
      )
    }
    <h1 data-ui="display">{headerTitle || "Header Title Here"}</h1>
    <div>
      <p>{headerDescription || "My really cool site description or slug"}</p>
    </div>
  </section>
</header>
<section id="features">
  <slot />
</section>
