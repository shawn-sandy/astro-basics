---
// imports
import { Breadcrumb as BreadcrumbNav } from "@fpkit/react";
// get current path using window.location.pathname
const path = window.location.pathname;
// split the paths into array using '/' as delimiter
const pathSegments = path.split("/").filter((segment) => segment);
// map over routes array to check for matching route
const routes = [
  {
    name: "Blog Post",
    url: "/posts/1",
    path: "posts",
  },
  {
    name: "About us",
    url: "about",
    path: "about",
  },
];
---

<BreadcrumbNav routes={routes} client:load />
