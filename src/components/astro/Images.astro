---
import { Image } from "astro:assets";

export type Props = {
  imgCaption?: string;
} & Partial<ReturnType<typeof Image>>;

const { imgSrc, imgAlt, imgWidth, imgHeight, imgCaption } = Astro.props;
---

<figure>
  <Image src={imgSrc} alt={imgAlt || ""} width={imgWidth} height={imgHeight} />
  {imgCaption && <figcaption>{imgCaption}</figcaption>}
</figure>
